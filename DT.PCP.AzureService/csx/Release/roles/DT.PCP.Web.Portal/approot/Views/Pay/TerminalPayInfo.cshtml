@using DT.PCP.Web.Resources.Models.Pay
@using DT.PCP.Web.Resources.Views.Pay
@model DT.PCP.Web.ViewModels.Pay.TerminalPayInfoViewModel
@{
    ViewBag.Title = PayViewsStrings.TitleTerminalPayInfo;
}
<link href="~/Content/print.css" rel="stylesheet" media="print" />
<script type="text/javascript">
    $(document).ready(function () {
        $(document).on('click', '.btn-info.span10', function () {

            $('.btn-primary.span10').removeClass('btn-primary').addClass('btn-info');
            $(this).addClass('btn-primary').removeClass('btn-info');
            $('.term-image').hide();

            var image = $(this).data('image');
            $('#' + image).show();

        });
    })
</script>

<div class="row-fluid">
    <header style="text-align: center; margin-bottom: 35px">
        <h1>@PayViewsStrings.TitleTerminalPayInfo</h1>
    </header>
</div>

<div class="row-fluid">
    <table class="table table-striped .table-bordered">
        <thead>
            <tr>
                <th>@PayViewsStrings.ContentOrderNumber</th>
                <th>@PayViewsStrings.ContentCost</th>
                <th>@PayViewsStrings.ContentCommission</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var violaltion in Model.Violations)
            {
                <tr>
                    <td>@violaltion.OrderNumber</td>
                    <td>@violaltion.Cost тг.</td>
                    <td>@Model.Commission %</td>
                </tr>
            }
            <tr style="font-weight: bold; font-size: 20px">
                <td colspan="2">@PayViewsStrings.ContentTotal:</td>
                <td>@Model.TotalPrice тг.</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="row-fluid" style="text-align: center">
    <div class="pull-left span6">
        <div id="page1" class="term-image">
            <img src="@Url.Content("~/Images/terminal-1p.png")"/>
        </div>

        <div id="page2" class="term-image" style="display: none">
            <img src="@Url.Content("~/Images/terminal-2p.png")"/>
        </div>

        <div id="page3" class="term-image" style="display: none">
            <img src="@Url.Content("~/Images/terminal-3p.png")"/>
        </div>

        <div id="page4" class="term-image" style="display: none">
            <img src="@Url.Content("~/Images/terminal-4p.png")"/>
        </div>

        <div id="page5" class="term-image" style="display: none">
            <img src="@Url.Content("~/Images/terminal-5p.png")"/>
        </div>

        <div id="page6" class="term-image" style="display: none">
            <img src="@Url.Content("~/Images/terminal-5p.png")"/>
        </div>

        <div id="page7" class="term-image" style="display: none">
            <img src="@Url.Content("~/Images/terminal-5p.png")"/>
        </div>
    </div>

    <div class="pull-rigth span6">
        <div id="page1_b">
                <button class="btn btn-primary span10" data-image="page1" style="margin-bottom: 5px">@PayViewsStrings.ContentHelpChapterPayService</button>
            </div>
            <div id="page2_b">
                <button class="btn btn-info span10" data-image="page2" style="margin-bottom: 5px">@PayViewsStrings.ContentHelpChapterOtherService</button>
            </div>
            <div id="page3_b">
                <button class="btn btn-info span10" data-image="page3" style="margin-bottom: 5px">@PayViewsStrings.ContentHelpChapterViolationPay</button>
            </div>
            <div id="page4_b">
                <button class="btn btn-info span10" data-image="page4" style="margin-bottom: 5px">@PayViewsStrings.ContentHelpChapterEnterOrderNumber</button>
            </div>
            <div id="page5_b">
                <button class="btn btn-info span10" data-image="page5" style="margin-bottom: 5px">@PayViewsStrings.ContentHelpChapterEnterMoney</button>
            </div>
            <div id="page6_b">
                <button class="btn btn-info span10" data-image="page6" style="margin-bottom: 5px">@PayViewsStrings.ContentHelpChapterCheck</button>
            </div>
            <div id="page7_b">
                <button class="btn btn-info span10" data-image="page7" style="margin-bottom: 5px">@PayViewsStrings.ContentHelpChapterPayButton</button>
            </div>
    </div>
    <div style="text-align:left" class="span12">
    <p>@Html.Raw(PayViewsStrings.ContentTerminalPayInfoMoneyTransfer)</p>
</div>
    <div class="span12">
        <input class="btn btn-large btn-primary span2" type="button" value="@PayViewsStrings.ButtonPrint" onclick="javascript: window.print();" />
    </div>
</div>

