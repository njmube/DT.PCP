@using DT.PCP.Web.Resources.Views.Cabinet
@model DT.PCP.Web.ViewModels.Cabinet.ConfirmationNotificationViewModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">@CabinetViewsStrings.ModalHeaderConfirmationNotification</h3>
</div>
<div class="modal-body">
    <p class="text-justify">Вы подписаны на уведомления. В зависимости от выбранного способа уведомлений, на указанный email или телефон был выслан проверочный код. Введите его в поле ниже. </p>
    <form id="form_notification_check" class="form-horizontal">
        <div class="control-group">
            @Html.LabelFor(m=>m.Code, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m=>m.Code)
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <input class="btn btn-large btn-primary" id="notification_check" type="button" value="@CabinetViewsStrings.ButtonConfirm" />
</div>
