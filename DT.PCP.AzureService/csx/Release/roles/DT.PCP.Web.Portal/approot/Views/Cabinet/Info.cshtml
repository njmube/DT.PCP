@using DT.PCP.Web.Resources.Views.Cabinet
@model DT.PCP.Web.ViewModels.Cabinet.UserInfoViewModel
@{
    ViewBag.Title = CabinetViewsStrings.TitleProfile;
}
<script src="~/Scripts/PCP/Cabinet.js"></script>
<div class="row-fluid">
    <header style="text-align: center; margin-bottom: 35px">
        <h1>@CabinetViewsStrings.TitleProfile</h1>
    </header>
</div>
<div class="row-fluid">
    <div class="span8">
        <div id="profile" class="span12" style="border: 1px solid #589fe2;">
            @Html.Partial("InfoPartial",Model)
        </div>
        <div class="span12" style="margin-top: 15px; margin-left: 5px">
            <div style="float: left; width: 32%; margin: 1px;">
                <input id="edit_info" type="submit" class="btn btn-large btn-primary" value="@CabinetViewsStrings.ButtonEdit" style="width: 100%;"></input>
            </div>
            <div style="float: left; width: 32%; margin: 1px;">
                <input id="load_info" type="submit" class="btn btn-large btn-primary" value="@CabinetViewsStrings.ButtonLoadFromServer" style="width: 100%;"></input>
            </div>

            <div style="float: left; width: 33%; margin: 1px;">
                <input id="subscribe" type="submit" class="btn btn-large btn-primary" value="@CabinetViewsStrings.ButtonNotification" style="width: 100%;"></input>
            </div>


        </div>

    </div>
    <div style="vertical-align: middle; padding-top: 60px;" class="span4 pull-right">
        <a href="@Url.Action("ChangeUserInfo", "Help")" target="_blank" class="btn btn-primary span12" style="margin-bottom: 15px;  margin-left:9px">@CabinetViewsStrings.ButtonHelpChangeUserInfo</a>
        <a href="@Url.Action("ProfileInfo", "Help")" target="_blank" class="btn btn-primary span12" style="margin-bottom: 15px">@CabinetViewsStrings.ButtonHelpLoadFromServer</a>
        <a href="@Url.Action("SubscribeInfo", "Help")" target="_blank" class="btn btn-primary span12">@CabinetViewsStrings.ButtonHelpWhatIsNotification</a>

    </div>
    @*<div class="span12 clear_mp" >
    @Html.Partial("_Violation", true)
</div>*@
</div>
