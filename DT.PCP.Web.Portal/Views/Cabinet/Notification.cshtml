@using DT.PCP.Web.Resources.Views.Cabinet
@model DT.PCP.Web.ViewModels.Cabinet.NotificationViewModel
<script src="~/Scripts/jquery.maskedinput.min.js"></script>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">@CabinetViewsStrings.ModalHeaderNotification</h3>
</div>
<div class="modal-body">
    <form id="subscribe_form" class="form-horizontal">
        @* @Html.HiddenFor(m => m.IsSubscribed)*@
        <div class="control-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBox("email", Model.Email)
                <label class="checkbox">
                    @Html.CheckBoxFor(m => m.EmailNotification) @CabinetViewsStrings.Subscribe
                </label>
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.Phone)
                <label class="checkbox">
                    @Html.CheckBoxFor(m => m.SmsNotification) @CabinetViewsStrings.Subscribe
                </label>
            </div>
        </div>

    </form>
</div>

<div class="modal-footer">
    <input class="btn btn-large btn-primary" id="subscribe_confirm" type="button" value="@CabinetViewsStrings.ButtonNotificationSave" />
</div>
