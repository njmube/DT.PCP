@using DT.PCP.Web.Resources.Views.Account
<div id="modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">@AccountViewsStrings.ModalSrtsNotFoundHeader</h3>
    </div>
    <div class="modal-body">
        <p>@AccountViewsStrings.ModalSrtsNotFoundBody</p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">@AccountViewsStrings.ModalCloseButton</button>
    </div>
</div>
