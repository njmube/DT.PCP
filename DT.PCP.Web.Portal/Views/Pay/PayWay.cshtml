        <div style="margin-top: 15px;">
            <img src="@Url.Content("~/Images/cards.png")"/>
        </div>
         <div style="text-align: justify">
            <p>@Html.Raw(PayViewsStrings.ContentPayWayCardPayDescription)</p>
        </div>
    </div>
    
    <div class="terminal-way pull-right span6" style="text-align: center">
        <div>
            <input type="button" class="btn btn-large btn-primary" style="width: 470px" id="pay_way_terminal" value="@PayViewsStrings.ButtonTerminal"/>
        </div>
        <div style="margin-top: 15px;">
            <img src="@Url.Content("~/Images/terminal.png")"/>
        </div>
        <div style="text-align: justify">
