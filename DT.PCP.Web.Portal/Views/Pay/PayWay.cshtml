@{
    ViewBag.Title = PayViewsStrings.TitlePayWay;
}

<div class="row-fluid">
    <div class="span12">
        <header style="text-align: center; margin-bottom: 35px">
            <h1>@PayViewsStrings.TitlePayWay</h1>
        </header>
    </div>
